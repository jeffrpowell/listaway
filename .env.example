# Listaway Environment Configuration Example
# Copy this file to .env and update the values

# Server Configuration
PORT=8080

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_USER=listaway
POSTGRES_PASSWORD=listaway
POSTGRES_DB=listaway

# Application Security
# Generate a 32-character random key for session encryption
LISTAWAY_AUTH_KEY=your-32-character-secret-key-here

# Application URL (used for password reset emails and OIDC redirects)
APP_URL=http://localhost:8080

# SMTP Configuration (for password reset emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@listaway.dev
SMTP_SECURE=true

# OIDC/OAuth2 Configuration
# Set to "true" to enable OIDC authentication
OIDC_ENABLED=false

# OIDC Provider URL - Examples:
# Google: https://accounts.google.com
# GitHub: https://github.com
# Microsoft: https://login.microsoftonline.com/{tenant-id}/v2.0
# Auth0: https://your-domain.auth0.com
OIDC_PROVIDER_URL=

# OAuth2 Client Credentials (obtain from your OIDC provider)
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=

# OAuth2 Redirect URL (must match exactly in provider configuration)
OIDC_REDIRECT_URL=http://localhost:8080/auth/oidc/callback

# OAuth2 Scopes (space-separated)
OIDC_SCOPES=openid profile email
